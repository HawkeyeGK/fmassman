@page "/player/{Name}"
@using FM26_Helper.Web.Models
@rendermode InteractiveServer
@inject PlayerDetailsViewModel VM

<PageTitle>Player Details: @Name</PageTitle>

@if (VM.Player == null)
{
    @if (VM.HeaderData == null) 
    {
        <div class="alert alert-warning">
            <h4>Player Not Found</h4>
            <p>Could not find player with name: <strong>@Name</strong></p>
            <a href="/" class="btn btn-primary">Return to Roster</a>
        </div>
    }
    else
    {
        <div class="alert alert-info">Loading...</div>
    }
}
else
{
    var h = VM.HeaderData;
    
    <div class="card border-primary mb-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">@h.Name</h3>
            <span class="badge bg-light text-dark fs-6">@h.Age years old</span>
        </div>
        <div class="card-body">
            <div class="row">
                <!-- Column 1: Personal Info -->
                <div class="col-md-3">
                    <h5 class="card-title text-info">Profile</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Personality:</span> 
                            <span class="@h.PersonalityCssClass text-end">@h.Personality</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Contract:</span> 
                            <span class="@h.ContractCssClass text-end">@h.ContractExpiry</span>
                        </li>
                    </ul>
                </div>

                <!-- Column 2: Status -->
                 <div class="col-md-3">
                    <h5 class="card-title text-info">Status</h5>
                    <ul class="list-group list-group-flush">
                         <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Playing Time:</span> 
                            <span class="@h.PlayingTimeCssClass text-end">@h.PlayingTime</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Wage:</span> <strong>@h.Wage.ToString("C0")</strong>
                        </li>
                         <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Value:</span> 
                            <span class="text-end">@(((h.TransferValueLow + h.TransferValueHigh)/2).ToString("C0"))</span>
                        </li>
                    </ul>
                </div>

                 <!-- Column 3: Physical -->
                <div class="col-md-3">
                    <h5 class="card-title text-info">Physical</h5>
                     <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Height:</span> <strong>@VM.Player.HeightFeet' @VM.Player.HeightInches"</strong>
                        </li>
                    </ul>
                </div>

                 <!-- Column 4: Best Roles -->
                <div class="col-md-3">
                    <h5 class="card-title text-info">Best Roles</h5>
                    <div class="mb-2">
                        <small class="text-muted d-block">In Possession</small>
                        <span class="badge bg-success w-100 p-2">
                            @h.BestInPossessionRole
                            <span class="badge bg-light text-dark ms-2">@h.BestInPossessionScore.ToString("F1")</span>
                        </span>
                    </div>
                     <div>
                        <small class="text-muted d-block">Out Possession</small>
                         <span class="badge bg-danger w-100 p-2">
                            @h.BestOutPossessionRole
                             <span class="badge bg-light text-dark ms-2">@h.BestOutPossessionScore.ToString("F1")</span>
                        </span>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Phase 2: Role Matrix -->
    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
             <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-success @(IsInPossessionMode ? "active" : "")" @onclick="() => SetMode(true)">
                    In Possession
                </button>
                <button type="button" class="btn btn-outline-danger @(!IsInPossessionMode ? "active" : "")" @onclick="() => SetMode(false)">
                    Out Of Possession
                </button>
            </div>
        </div>
    </div>

    @if (VM.MatrixRows.Any())
    {
        var scale = IsInPossessionMode ? VM.GlobalInPossessionScale : VM.GlobalOutPossessionScale;

        <div class="table-responsive">
            <table class="table table-bordered table-striped table-dark table-sm table-hover text-center">
                <thead>
                    <tr>
                        @foreach (var header in VM.MatrixHeaders)
                        {
                            <th>@header</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in VM.MatrixRows)
                    {
                        <tr>
                            @foreach (var cell in row)
                            {
                                @if (cell == null)
                                {
                                    <td>-</td>
                                }
                                else
                                {
                                    <td style="@(scale?.GetColorStyle(cell.Score) ?? "")">
                                        <div class="d-flex flex-column justify-content-center align-items-center p-1">
                                            <span class="fw-bold" style="font-size: 1.1rem;">@cell.Score.ToString("F1")</span>
                                            <span style="font-size: 0.8rem; line-height: 1;">@cell.RoleName</span>
                                        </div>
                                    </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}

@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;

    private bool IsInPossessionMode = true;

    private void SetMode(bool inPossession)
    {
        IsInPossessionMode = inPossession;
        VM.IsInPossessionMode = inPossession; // Sync with VM
        VM.BuildMatrix(); // Rebuild with new mode
        StateHasChanged();
    }

    protected override void OnInitialized()
    {
        VM.LoadPlayer(Name);
    }
}
