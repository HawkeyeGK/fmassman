@page "/role-editor"
@rendermode InteractiveServer
@using FM26_Helper.Shared
@using FM26_Helper.Shared.Services
@inject RoleService RoleService
@inject NavigationManager Nav

<PageTitle>Role Editor</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Role Editor</h1>
    <div>
        <button class="btn btn-warning me-2" @onclick="ResetDefaults">
            <i class="bi bi-arrow-counterclockwise"></i> Reset to Baseline
        </button>
        <button class="btn btn-primary" @onclick="SaveChanges">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</div>

@if (roles == null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <div class="list-group" style="max-height: 70vh; overflow-y: auto;">
                @foreach (var role in roles.OrderBy(r => r.Category).ThenBy(r => r.Name))
                {
                    <button class="list-group-item list-group-item-action @(selectedRole == role ? "active" : "")" 
                            @onclick="() => SelectRole(role)">
                        <strong>@role.Name</strong>
                        <div class="small">@role.Category</div>
                    </button>
                }
            </div>
        </div>

        <div class="col-md-8">
            @if (selectedRole != null)
            {
                <div class="card bg-dark text-white border-secondary">
                    <div class="card-header">
                        Editing: <strong>@selectedRole.Name</strong> (@selectedRole.Category)
                    </div>
                    <div class="card-body">
                        <table class="table table-dark table-sm">
                            <thead>
                                <tr>
                                    <th>Attribute</th>
                                    <th style="width: 100px;">Weight</th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var weight in selectedRole.Weights.OrderBy(w => w.Key))
                                {
                                    <tr>
                                        <td>@weight.Key</td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" 
                                                   value="@weight.Value" 
                                                   @onchange="@(e => UpdateWeight(weight.Key, e.Value))" />
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" @onclick="() => RemoveWeight(weight.Key)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="input-group mt-3">
                            <select class="form-select" @bind="newAttribute">
                                <option value="">-- Select Attribute --</option>
                                @foreach (var attr in RoleFitCalculator.ValidAttributeNames)
                                {
                                    if (!selectedRole.Weights.ContainsKey(attr))
                                    {
                                        <option value="@attr">@attr</option>
                                    }
                                }
                            </select>
                            <button class="btn btn-success" @onclick="AddAttribute" disabled="@string.IsNullOrEmpty(newAttribute)">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">Select a role to edit its attribute weights.</div>
            }
        </div>
    </div>
}

<div class="toast-container position-fixed top-0 end-0 p-3 mt-4" style="z-index: 1050">
    <div class="toast align-items-center text-white bg-success border-0 @(showToast ? "show" : "")" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i> @toastMessage
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="CloseToast" aria-label="Close"></button>
        </div>
    </div>
</div>

@code {
    private List<RoleDefinition>? roles;
    private RoleDefinition? selectedRole;
    private string newAttribute = "";
    private bool showToast = false;

    private string toastMessage = "Roles saved successfully!";

    protected override void OnInitialized()
    {
        LoadData();
    }

    private void LoadData()
    {
        roles = RoleService.LoadLocalRoles();
    }

    private void SelectRole(RoleDefinition role)
    {
        selectedRole = role;
        newAttribute = "";
    }

    private void UpdateWeight(string key, object? value)
    {
        if (selectedRole != null && double.TryParse(value?.ToString(), out double val))
        {
            selectedRole.Weights[key] = val;
        }
    }

    private void RemoveWeight(string key)
    {
        selectedRole?.Weights.Remove(key);
    }

    private void AddAttribute()
    {
        if (selectedRole != null && !string.IsNullOrEmpty(newAttribute))
        {
            selectedRole.Weights[newAttribute] = 3; // Default weight
            newAttribute = "";
        }
    }

    private async Task SaveChanges()
    {
        if (roles != null)
        {
            RoleService.SaveRoles(roles);
            
            // Show Toast
            toastMessage = "Roles saved successfully!";
            showToast = true;
            StateHasChanged();

            // Auto-hide after 3 seconds
            await Task.Delay(3000);
            showToast = false;
            StateHasChanged();
        }
    }

    private void CloseToast()
    {
        showToast = false;
    }

    private async Task ResetDefaults()
    {
        RoleService.ResetToBaseline();
        LoadData(); // Reload UI
        selectedRole = null;
        
        toastMessage = "All roles reset to factory settings!";
        showToast = true;
        StateHasChanged();

        // Auto-hide after 3 seconds
        await Task.Delay(3000);
        showToast = false;
        StateHasChanged();
    }
}
