<CascadingAuthenticationState>
    <AuthorizeView>
        <Authorized>
            <Router AppAssembly="@typeof(App).Assembly">
                <Found Context="routeData">
                    <AuthorizeRouteView RouteData="@routeData" DefaultLayout="@typeof(MainLayout)" />
                </Found>
                <NotFound>
                    <PageTitle>Not found</PageTitle>
                    <LayoutView Layout="@typeof(MainLayout)">
                        <p role="alert">Sorry, there's nothing at this address.</p>
                    </LayoutView>
                </NotFound>
            </Router>
        </Authorized>
        <NotAuthorized>
            <div class="d-flex align-items-center justify-content-center vh-100 bg-dark">
                <div class="card text-center bg-light text-dark shadow-lg" style="width: 24rem;">
                    <div class="card-body">
                        <h2 class="card-title fw-bold mb-4">FM AssMan</h2>
                        <h4 class="card-text mb-4">Authorized Access Only</h4>
                        <p class="card-text text-muted mb-4">Please log in to access the application.</p>
                        <a href="login" class="btn btn-primary btn-lg w-100">Log In with Microsoft</a>
                    </div>
                </div>
            </div>
        </NotAuthorized>
    </AuthorizeView>
</CascadingAuthenticationState>
