@inherits LayoutComponentBase

<ErrorBoundary>
    <ChildContent>
        <div class="page">
            <header>
                <NavMenu />
            </header>

            <main>
                <article class="content px-4">
                    @Body
                </article>
            </main>

            <footer class="border-top border-dark footer mt-auto bg-dark">
                <div class="container-fluid text-center py-2">
                    <AuthorizeView>
                        <Authorized>
                            <span class="small me-2 text-light">Logged in as: <strong>@context.User.Identity?.Name</strong></span>
                            <a href="/.auth/logout" class="text-decoration-none small text-warning"><span class="bi bi-box-arrow-right"></span> Logout</a>
                        </Authorized>
                        <NotAuthorized>
                            <a href="/.auth/login/aad" class="text-decoration-none small text-info"><span class="bi bi-person"></span> Log In</a>
                        </NotAuthorized>
                    </AuthorizeView>
                </div>
            </footer>
        </div>
    </ChildContent>
    <ErrorContent Context="ex">
        <div class="alert alert-danger m-4">
            <h3 class="alert-heading">Something went wrong</h3>
            <p>An unexpected error occurred. Please reload the page.</p>
            <hr />
            <p class="mb-0">@ex.Message</p>
        </div>
    </ErrorContent>
</ErrorBoundary>
