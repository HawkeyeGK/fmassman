@page "/player/{Name}"
@using fmassman.Client.Models

@inject PlayerDetailsViewModel VM
@inject HttpClient Http
@inject IJSRuntime JSRuntime
@inject fmassman.Client.Services.ApiRosterService RosterService
@using System.Net.Http.Headers

<PageTitle>Player Details: @Name</PageTitle>

@if (VM.HeaderData is { } h)
{
    @if (!string.IsNullOrEmpty(notificationMessage))
    {
        <div class="alert @notificationClass alert-dismissible fade show" role="alert">
            @notificationMessage
            <button type="button" class="btn-close" @onclick="() => notificationMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="card border-primary mb-3">
        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
            <h3 class="mb-0">
                @h.Name
                @if (VM.PrimaryPosition != null)
                {
                    <span class="ms-2 badge border border-light" style="font-size: 0.5em; vertical-align: middle; background-color: @VM.PrimaryPosition.ColorHex;">@VM.PrimaryPosition.Name</span>
                }
            </h3>
            <div class="d-flex gap-2">
                <button class="btn btn-outline-warning me-2" @onclick="() => showUploadModal = true">
                    <i class="bi bi-arrow-clockwise"></i> <span>Refresh</span>
                </button>
                <button class="btn btn-outline-info me-2" @onclick="PushToMiro" disabled="@isPushing">

                    @if (isPushing)
                    {
                        <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                        <span>Pushing...</span>
                    }
                    else
                    {
                        <i class="bi bi-broadcast"></i> <span>Push to Miro</span>
                    }
                </button>
                <a href="/player/@(Uri.EscapeDataString(Name))/edit" class="btn btn-outline-secondary me-2">Edit</a>
                
                @if (!confirmDelete)
                {
                    <button class="btn btn-sm btn-outline-danger text-light" @onclick="() => confirmDelete = true">Delete</button>
                }
                else
                {
                    <span class="text-white me-2 align-self-center">Are you sure?</span>
                    <button class="btn btn-sm btn-danger" @onclick="ExecuteDelete">Yes, Delete</button>
                    <button class="btn btn-sm btn-secondary" @onclick="() => confirmDelete = false">Cancel</button>
                }
            </div>
        </div>
        <div class="card-body">
            @if (VM.AssignedTags.Any())
            {
                <div class="mb-3">
                    @foreach (var tag in VM.AssignedTags)
                    {
                        var badgeClass = tag.IsArchived ? "bg-danger" : (!tag.IsRostered ? "bg-info text-dark" : "bg-success");
                        <span class="badge @badgeClass me-1">@tag.Name</span>
                    }
                </div>
            }

            <div class="row">
                <div class="col-md-3">
                    <h5 class="card-title text-info">Profile</h5>
                    <ul class="list-group list-group-flush">
                         <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Age:</span> 
                            <span class="text-end">@h.Age</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Personality:</span> 
                            <span class="@h.PersonalityCssClass text-end">@h.Personality</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Playing Time:</span> 
                            <span class="@h.PlayingTimeCssClass text-end">
                                @h.PlayingTime
                                @if (h.OnLoan)
                                {
                                    <span class="badge bg-warning text-dark ms-1">L</span>
                                }
                            </span>
                        </li>
                    </ul>
                </div>

                <div class="col-md-3">
                    <h5 class="card-title text-info">Financial</h5>
                    <ul class="list-group list-group-flush">
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Contract:</span> 
                            <span class="@h.ContractCssClass text-end">@h.ContractExpiry</span>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Wage:</span> <strong>@h.Wage.ToString("C0")</strong>
                        </li>
                        <li class="list-group-item bg-transparent d-flex justify-content-between">
                            <span>Value:</span> 
                            <span class="text-end">@h.TransferValueLow.ToString("C0") - @h.TransferValueHigh.ToString("C0")</span>
                        </li>
                    </ul>
                </div>

                 <div class="col-md-3">
                    @if (VM.IsGoalkeeper)
                    {
                        <h5 class="card-title text-info">Goalkeeping</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Height:</span> <strong>@(VM.Player?.HeightFeet ?? 0)' @(VM.Player?.HeightInches ?? 0)"</strong>
                            </li>
                            <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Handling:</span> <strong>@VM.Player?.Snapshot?.Goalkeeping?.Handling</strong>
                            </li>
                            <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Reflexes:</span> <strong>@VM.Player?.Snapshot?.Goalkeeping?.Reflexes</strong>
                            </li>
                             <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Cmd Area:</span> <strong>@VM.Player?.Snapshot?.Goalkeeping?.CommandOfArea</strong>
                            </li>
                             <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Technique:</span> <strong>@VM.Player?.Snapshot?.Technical?.Technique</strong>
                            </li>
                        </ul>
                    }
                    else
                    {
                        <h5 class="card-title text-info">Physical</h5>
                        <ul class="list-group list-group-flush">
                            <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Height:</span> <strong>@(VM.Player?.HeightFeet ?? 0)' @(VM.Player?.HeightInches ?? 0)"</strong>
                            </li>
                             <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>Speed:</span> <strong>@h.Speed.ToString("F1")</strong>
                            </li>
                            <li class="list-group-item bg-transparent d-flex justify-content-between">
                                <span>DNA:</span> <strong>@h.DNA.ToString("F1")</strong>
                            </li>
                        </ul>
                    }
                </div>

                 <div class="col-md-3">
                    <h5 class="card-title text-info">Best Roles</h5>
                    <div class="mb-2">
                        <small class="text-muted d-block">In Possession</small>
                        <div class="p-2 w-100 rounded text-center border border-secondary" 
                             style="@(VM.GlobalInPossessionScale?.GetColorStyle(VM.BestInPossession?.Score ?? 0) ?? "background-color: #444; color: #fff;")">
                            @if (VM.BestInPossession != null)
                            {
                                <span class="fw-bold">@VM.BestInPossession.Category - @VM.BestInPossession.RoleName - @VM.BestInPossession.Score.ToString("F1")</span>
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </div>
                    </div>
                    <div>
                        <small class="text-muted d-block">Out Of Possession</small>
                         <div class="p-2 w-100 rounded text-center border border-secondary" 
                              style="@(VM.GlobalOutPossessionScale?.GetColorStyle(VM.BestOutPossession?.Score ?? 0) ?? "background-color: #444; color: #fff;")">
                            @if (VM.BestOutPossession != null)
                            {
                                <span class="fw-bold">@VM.BestOutPossession.Category - @VM.BestOutPossession.RoleName - @VM.BestOutPossession.Score.ToString("F1")</span>
                            }
                            else
                            {
                                <span>N/A</span>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>




    <div class="row mb-3">
        <div class="col-12 d-flex justify-content-end">
             <div class="btn-group" role="group">
                <button type="button" class="btn btn-outline-secondary @(IsInPossessionMode ? "active" : "")" @onclick="() => SetMode(true)">
                    In Possession
                </button>
                <button type="button" class="btn btn-outline-secondary @(!IsInPossessionMode ? "active" : "")" @onclick="() => SetMode(false)">
                    Out Of Possession
                </button>
            </div>
        </div>
    </div>

    @if (VM.MatrixRows.Any())
    {
        var scale = IsInPossessionMode ? VM.GlobalInPossessionScale : VM.GlobalOutPossessionScale;

        <div class="table-responsive">
            <table class="table table-bordered table-dark table-sm text-center">
                <thead>
                    <tr>
                        @foreach (var header in VM.MatrixHeaders)
                        {
                            <th>@header</th>
                        }
                    </tr>
                </thead>
                <tbody>
                    @foreach (var row in VM.MatrixRows)
                    {
                        <tr>
                            @foreach (var cell in row)
                            {
                                @if (cell == null)
                                {
                                    <td>-</td>
                                }
                                else
                                {
                                    <td style="@(scale?.GetColorStyle(cell.Score) ?? "")">
                                        <div class="d-flex flex-column justify-content-center align-items-center p-1">
                                            <span class="fw-bold" style="font-size: 1.1rem;">@cell.Score.ToString("F1")</span>
                                            <span style="font-size: 0.8rem; line-height: 1;">@cell.RoleName</span>
                                        </div>
                                    </td>
                                }
                            }
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
}
else if (VM.IsLoading)
{
    <div class="text-center p-5">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
        <p class="mt-3">Loading player data...</p>
    </div>
}
else if (VM.Player == null)
{
     <div class="alert alert-warning">
         <h4>Player Not Found</h4>
         <p>Could not find player with name: <strong>@Name</strong></p>
         <a href="/" class="btn btn-primary">Return to Roster</a>
     </div>
}
else
{
     <div class="alert alert-warning">
         <h4>Incomplete Data</h4>
         <p>Player <strong>@Name</strong> exists but has no snapshot data.</p>
         <a href="/player/@(Uri.EscapeDataString(Name))/edit" class="btn btn-primary">Add Data</a>
     </div>
}

@if (showUploadModal)
{
    <div class="modal fade show d-block" style="background-color: rgba(0,0,0,0.5);" tabindex="-1">
        <div class="modal-dialog">
            <div class="modal-content text-dark">
                <div class="modal-header">
                    <h5 class="modal-title">Refresh Profile Attributes</h5>
                    <button type="button" class="btn-close" @onclick="CloseModal"></button>
                </div>
                <div class="modal-body">
                    <p>Upload a new screenshot to update attributes for <strong>@Name</strong>.</p>
                    <p class="text-muted small">Position, Role, and Tags will be preserved. Attributes captured in the OCR will be replaced.</p>
                    
                    @if (!string.IsNullOrEmpty(uploadError))
                    {
                        <div class="alert alert-danger">@uploadError</div>
                    }

                    <div class="mb-3">
                        <label class="form-label">Select Screenshot (.png, .jpg)</label>
                        <InputFile OnChange="HandleFileSelected" accept=".png,.jpg,.jpeg" class="form-control" />
                    </div>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" @onclick="CloseModal" disabled="@isRefreshing">Cancel</button>
                    <button type="button" class="btn btn-primary" @onclick="ProcessRefresh" disabled="@(selectedFile == null || isRefreshing)">
                        @if (isRefreshing)
                        {
                            <span class="spinner-border spinner-border-sm me-1" role="status" aria-hidden="true"></span>
                            <span>Refreshing...</span>
                        }
                        else
                        {
                            <span>Refresh</span>
                        }
                    </button>
                </div>
            </div>
        </div>
    </div>
}

@code {
    [Parameter]
    public string Name { get; set; } = string.Empty;

    private bool IsInPossessionMode = true;
    private bool confirmDelete = false;

    // Refresh Modal State
    private bool showUploadModal = false;
    private IBrowserFile? selectedFile;
    private bool isRefreshing = false;
    private string? uploadError;
    private long maxFileSize = 1024 * 1024 * 10; // 10MB

    private void CloseModal()
    {
        showUploadModal = false;
        selectedFile = null;
        uploadError = null;
    }

    private void HandleFileSelected(InputFileChangeEventArgs e)
    {
        selectedFile = e.File;
        uploadError = null;
    }

    private async Task ProcessRefresh()
    {
        if (selectedFile == null || VM.Player == null) return;

        isRefreshing = true;
        uploadError = null;

        try
        {
            using var fileContent = new StreamContent(selectedFile.OpenReadStream(maxFileSize));
            fileContent.Headers.ContentType = new MediaTypeHeaderValue(selectedFile.ContentType);

            // Determine GK status from Primary Position if available, otherwise fallback to current VM status
            var isGoalkeeper = VM.PrimaryPosition?.Code.Equals("GK", StringComparison.OrdinalIgnoreCase) 
                               ?? VM.IsGoalkeeper;

            var ocrResult = await RosterService.UploadPlayerImage(fileContent, isGoalkeeper);

            if (ocrResult != null)
            {
                // Preserve existing metadata
                ocrResult.PlayerName = VM.Player.PlayerName; // Ensure ID matches
                ocrResult.PositionId = VM.Player.PositionId;
                ocrResult.TagIds = VM.Player.TagIds;
                ocrResult.MiroWidgetId = VM.Player.MiroWidgetId;

                // Save changes
                await RosterService.UpsertAsync(ocrResult);

                // Reload and close
                await VM.LoadPlayerAsync(Name);
                
                notificationMessage = "✅ Profile attributes refreshed successfully!";
                notificationClass = "alert-success";
                
                CloseModal();
            }
        }
        catch (Exception ex)
        {
            uploadError = $"Error: {ex.Message}";
        }
        finally
        {
            isRefreshing = false;
            StateHasChanged();
        }
    }

    private async Task ExecuteDelete()
    {
        await VM.DeletePlayerAsync();
    }

    private string? notificationMessage;
    private string notificationClass = "alert-info";
    private bool isPushing = false;

    private async Task PushToMiro()
    {
        if (VM.Player == null) return;
        notificationMessage = null;
        isPushing = true;
        
        try
        {
            var result = await Http.PostAsync($"api/miro/push/{Uri.EscapeDataString(VM.Player.PlayerName)}", null);
            var responseBody = await result.Content.ReadAsStringAsync();
            
            if (result.IsSuccessStatusCode)
            {
                notificationMessage = "✅ Successfully pushed player card to Miro!";
                notificationClass = "alert-success";
            }
            else
            {
                notificationMessage = $"❌ Failed to push to Miro. Status: {result.StatusCode}";
                notificationClass = "alert-danger";
            }
        }
        catch (Exception ex)
        {
            notificationMessage = $"❌ Error: {ex.Message}";
            notificationClass = "alert-danger";
        }
        finally
        {
            isPushing = false;
            StateHasChanged();
        }
    }

    private void SetMode(bool inPossession)
    {
        IsInPossessionMode = inPossession;
        VM.IsInPossessionMode = inPossession; // Sync with VM
        VM.BuildMatrix(); // Rebuild with new mode
        StateHasChanged();
    }

    protected override async Task OnInitializedAsync()
    {
        await VM.LoadPlayerAsync(Name);
    }
}
