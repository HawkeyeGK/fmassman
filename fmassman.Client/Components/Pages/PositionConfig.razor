@page "/admin/positions"
@using fmassman.Shared.Models
@using fmassman.Client.Services
@inject IPositionService PositionService
@inject IJSRuntime JSRuntime

<PageTitle>Position Configuration</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Position Configuration</h1>
    <div class="d-flex gap-2">
        <a href="/api/miro/auth/login" class="btn btn-outline-primary">
            <i class="bi bi-cloud-arrow-up"></i> Connect to Miro
        </a>
        <button class="btn btn-primary" @onclick="CreatePosition" disabled="@(editingPosition != null)">
            <i class="bi bi-plus-lg"></i> Add Position
        </button>
    </div>
</div>

@if (positions == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 30%">Name</th>
                        <th style="width: 15%">Code</th>
                        <th style="width: 20%">Color</th>
                        <th class="text-end" style="width: 35%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var position in positions)
                    {
                        <tr class="@(editingPosition?.Id == position.Id ? "table-active" : "")">
                            <td>
                                @if (editingPosition?.Id == position.Id)
                                {
                                    <input class="form-control" @bind="editingPosition.Name" placeholder="Position Name" />
                                }
                                else
                                {
                                    <span class="fw-medium">@position.Name</span>
                                }
                            </td>
                            <td>
                                @if (editingPosition?.Id == position.Id)
                                {
                                    <input class="form-control" @bind="editingPosition.Code" placeholder="Code" maxlength="5" style="width: 80px;" />
                                }
                                else
                                {
                                    <code>@position.Code</code>
                                }
                            </td>
                            <td>
                                @if (editingPosition?.Id == position.Id)
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <input type="color" class="form-control form-control-color" @bind="editingPosition.ColorHex" title="Choose color" />
                                        <code class="small">@editingPosition.ColorHex</code>
                                    </div>
                                }
                                else
                                {
                                    <div class="d-flex align-items-center gap-2">
                                        <span class="badge" style="background-color: @position.ColorHex; width: 40px; height: 24px;">&nbsp;</span>
                                        <code class="small">@position.ColorHex</code>
                                    </div>
                                }
                            </td>
                            <td class="text-end">
                                @if (editingPosition?.Id == position.Id)
                                {
                                    <button class="btn btn-sm btn-success me-2" @onclick="SaveEdit">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                    <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-lg"></i> Cancel
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditPosition(position)" disabled="@(editingPosition != null)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeletePosition(position)" disabled="@(editingPosition != null)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<PositionDefinition>? positions;
    private PositionDefinition? editingPosition;
    private string? errorMessage;
    private string? successMessage;
    private bool isNewPosition = false;

    protected override async Task OnInitializedAsync()
    {
        await LoadPositions();
    }

    private async Task LoadPositions()
    {
        try
        {
            positions = await PositionService.GetAllAsync();
            positions = positions.OrderBy(p => p.Name).ToList();
        }
        catch (Exception ex)
        {
            errorMessage = $"Failed to load positions: {ex.Message}";
        }
    }

    private void CreatePosition()
    {
        errorMessage = null;
        successMessage = null;
        editingPosition = new PositionDefinition { Name = "New Position", Code = "NEW", ColorHex = "#0000FF" };
        isNewPosition = true;
        positions?.Add(editingPosition);
    }

    private void EditPosition(PositionDefinition position)
    {
        errorMessage = null;
        successMessage = null;
        isNewPosition = false;
        editingPosition = new PositionDefinition
        {
            Id = position.Id,
            Name = position.Name,
            Code = position.Code,
            ColorHex = position.ColorHex
        };
    }

    private async Task SaveEdit()
    {
        if (editingPosition == null) return;

        try
        {
            if (string.IsNullOrWhiteSpace(editingPosition.Name))
            {
                errorMessage = "Position name is required.";
                return;
            }

            if (string.IsNullOrWhiteSpace(editingPosition.Code))
            {
                errorMessage = "Position code is required.";
                return;
            }

            await PositionService.UpsertAsync(editingPosition);

            isNewPosition = false;
            editingPosition = null;
            errorMessage = null;
            successMessage = "Position saved successfully.";
            await LoadPositions();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving position: {ex.Message}";
        }
    }

    private async Task CancelEdit()
    {
        editingPosition = null;
        errorMessage = null;
        await LoadPositions();
    }

    private async Task DeletePosition(PositionDefinition position)
    {
        errorMessage = null;
        successMessage = null;
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{position.Name}'?");
        if (confirmed)
        {
            try
            {
                await PositionService.DeleteAsync(position.Id);
                await LoadPositions();
                successMessage = $"Position '{position.Name}' deleted.";
            }
            catch (Exception ex)
            {
                errorMessage = $"Error deleting position: {ex.Message}";
            }
        }
    }
}
