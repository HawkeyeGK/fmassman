@page "/tactics"
@using fmassman.Shared
@using fmassman.Client.Services
@inject ITacticService TacticService
@inject NavigationManager nav



<div class="row mb-3">
    <div class="col">
        <button class="btn btn-primary" @onclick="AddNew">Add New Tactic</button>
    </div>
</div>

@if (tactics == null)
{
    <p><em>Loading...</em></p>
}
else if (!tactics.Any())
{
    <p>No tactics found.</p>
}
else
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Roles (In Poss)</th>
                <th>Roles (Out Poss)</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var tactic in tactics)
            {
                <tr>
                    <td>@tactic.Name</td>
                    <td>@tactic.InPossessionRoleIds?.Count</td>
                    <td>@tactic.OutPossessionRoleIds?.Count</td>
                    <td>
                        <button class="btn btn-sm btn-secondary me-2" @onclick="() => Edit(tactic.Id)">Edit</button>
                        <button class="btn btn-sm btn-danger" @onclick="() => Delete(tactic.Id)">Delete</button>
                    </td>
                </tr>
            }
        </tbody>
    </table>
}

@code {
    private List<Tactic>? tactics;

    protected override async Task OnInitializedAsync()
    {
        await LoadTactics();
    }

    private async Task LoadTactics()
    {
        tactics = await TacticService.GetAllAsync();
    }

    private void AddNew()
    {
        nav.NavigateTo("/tactic/new");
    }

    private void Edit(string id)
    {
        nav.NavigateTo($"/tactic/{id}");
    }

    private async Task Delete(string id)
    {
        if (await DisplayDeleteConfirmation())
        {
            await TacticService.DeleteAsync(id);
            await LoadTactics();
        }
    }
    
    // Simple confirmation dialog placeholder. 
    // In a real app we might use a modal or JS interop
    private Task<bool> DisplayDeleteConfirmation()
    {
        return Task.FromResult(true); 
    }
}
