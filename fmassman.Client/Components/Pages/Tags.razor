@page "/tags"
@using fmassman.Shared
@inject ITagRepository TagRepository
@inject IRosterRepository RosterRepository
@inject IJSRuntime JSRuntime

<PageTitle>Tag Management</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tag Management</h1>
    <button class="btn btn-primary" @onclick="CreateTag" disabled="@(editingTag != null)">
        <i class="bi bi-plus-lg"></i> Create New Tag
    </button>
</div>

@if (tags == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    @if (!string.IsNullOrEmpty(successMessage))
    {
        <div class="alert alert-success alert-dismissible fade show" role="alert">
            @successMessage
            <button type="button" class="btn-close" @onclick="() => successMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm mb-4">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 30%">Name</th>
                        <th class="text-center" style="width: 15%">Rostered</th>
                        <th class="text-center" style="width: 15%">Default</th>
                        <th class="text-center" style="width: 15%">Archived</th>
                        <th class="text-end" style="width: 25%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in tags)
                    {
                        <tr class="@GetRowClass(tag)">
                            <td>
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <input class="form-control" @bind="editingTag.Name" placeholder="Tag Name" />
                                }
                                else
                                {
                                    <span class="fw-medium">@tag.Name</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsRostered" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsRostered ? "bi-check-circle-fill text-success" : "bi-x-circle text-secondary") fs-5"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsDefault" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsDefault ? "bi-check-circle-fill text-primary" : "bi-circle text-secondary") fs-5"></i>
                                }
                            </td>
                             <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsArchived" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsArchived ? "bi-archive-fill text-warning" : "bi-archive text-secondary") fs-5"></i>
                                }
                            </td>
                            <td class="text-end">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <button class="btn btn-sm btn-success me-2" @onclick="SaveEdit">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                    <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-lg"></i> Cancel
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditTag(tag)" disabled="@(editingTag != null)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTag(tag)" disabled="@(editingTag != null)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>

    @if (editingTag != null && editingTag.Id != null && !isNewTag)
    {
        <div class="card shadow-sm border-info">
            <div class="card-header bg-info-subtle">
                <h5 class="mb-0">Member Management: @editingTag.Name</h5>
            </div>
            <div class="card-body">
                <div class="row mb-3">
                    <div class="col-md-5">
                         <div class="d-flex justify-content-between align-items-center mb-2">
                             <h6>Available Players</h6>
                              <div class="form-check form-switch">
                                <input class="form-check-input" type="checkbox" @bind="showUntaggedOnly" id="showUntaggedOnlyToggle" />
                                <label class="form-check-label small" for="showUntaggedOnlyToggle">No Tags Only</label>
                            </div>
                        </div>
                        <input type="text" class="form-control mb-2" placeholder="Search players..." @bind="playerSearch" @bind:event="oninput" />
                        <div class="list-group overflow-auto" style="max-height: 300px;">
                            @foreach (var player in FilteredAvailablePlayers)
                            {
                                <button type="button" class="list-group-item list-group-item-action @(selectedAvailable.Contains(player) ? "active" : "")" 
                                        @onclick="() => ToggleSelection(selectedAvailable, player)">
                                    @player.PlayerName
                                    @if(player.TagIds != null && player.TagIds.Any())
                                    {
                                         <small class="text-muted ms-2">(@player.TagIds.Count tags)</small>
                                    }
                                </button>
                            }
                        </div>
                    </div>
                    
                    <div class="col-md-2 d-flex flex-column justify-content-center align-items-center gap-2">
                         <button class="btn btn-primary" @onclick="AddSelectedMembers" disabled="@(!selectedAvailable.Any())">
                            Add &gt;
                        </button>
                        <button class="btn btn-secondary" @onclick="RemoveSelectedMembers" disabled="@(!selectedCurrent.Any())">
                            &lt; Remove
                        </button>
                    </div>

                    <div class="col-md-5">
                        <h6 class="mb-2">Current Members</h6>
                        <div class="alert alert-secondary py-1 px-2 mb-2"><small>@CurrentMembers.Count members</small></div>
                         <div class="list-group overflow-auto" style="max-height: 300px;">
                            @foreach (var player in CurrentMembers)
                            {
                                <button type="button" class="list-group-item list-group-item-action @(selectedCurrent.Contains(player) ? "active" : "")" 
                                        @onclick="() => ToggleSelection(selectedCurrent, player)">
                                    @player.PlayerName
                                </button>
                            }
                        </div>
                    </div>
                </div>
                <div class="d-flex justify-content-end">
                    <button class="btn btn-success" @onclick="SaveMembers" disabled="@(!membersDirty)">Save Member Changes</button>
                </div>
            </div>
        </div>
    }
}

@code {
    private List<TagDefinition> tags;
    private TagDefinition editingTag;
    private string errorMessage;
    private string successMessage;
    private bool isNewTag = false;

    // Member Management
    private List<PlayerImportData> allPlayers;
    private List<PlayerImportData> CurrentMembers => allPlayers?.Where(p => p.TagIds != null && editingTag?.Id != null && p.TagIds.Contains(editingTag.Id)).OrderBy(p => p.PlayerName).ToList() ?? new();
    private List<PlayerImportData> AvailablePlayers => allPlayers?.Where(p => p.TagIds == null || (editingTag?.Id != null && !p.TagIds.Contains(editingTag.Id))).ToList() ?? new();
    
    private string playerSearch = "";
    private bool showUntaggedOnly = false;
    private List<PlayerImportData> selectedAvailable = new();
    private List<PlayerImportData> selectedCurrent = new();
    private bool membersDirty = false;

    private IEnumerable<PlayerImportData> FilteredAvailablePlayers
    {
        get
        {
            var query = AvailablePlayers.AsEnumerable();
            
            if (showUntaggedOnly)
            {
                query = query.Where(p => p.TagIds == null || !p.TagIds.Any());
            }

            if (!string.IsNullOrWhiteSpace(playerSearch))
            {
                query = query.Where(p => p.PlayerName.Contains(playerSearch, StringComparison.OrdinalIgnoreCase));
            }

            return query.OrderBy(p => p.PlayerName);
        }
    }

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
        // Load players for member management
        try
        {
            allPlayers = await RosterRepository.LoadAsync();
            // Ensure TagIds are initialized
            foreach(var p in allPlayers)
            {
                if (p.TagIds == null) p.TagIds = new List<string>();
            }
        }
        catch(Exception ex)
        {
            errorMessage = $"Failed to load roster: {ex.Message}";
        }
    }

    private async Task LoadTags()
    {
        try 
        {
            tags = await TagRepository.GetAllAsync();
            tags = tags.OrderBy(t => t.Name).ToList();
        } 
        catch (Exception ex)
        {
            errorMessage = $"Failed to load tags: {ex.Message}";
        }
    }

    private void CreateTag()
    {
        errorMessage = null; successMessage = null;
        editingTag = new TagDefinition { Name = "New Tag" };
        isNewTag = true;
        tags.Insert(0, editingTag);
        ResetMemberSelection();
    }

    private void EditTag(TagDefinition tag)
    {
        errorMessage = null; successMessage = null;
        isNewTag = false;
        // Clone to allow cancel
        editingTag = new TagDefinition
        {
            Id = tag.Id,
            Name = tag.Name,
            IsRostered = tag.IsRostered,
            IsDefault = tag.IsDefault,
            IsArchived = tag.IsArchived
        };
        ResetMemberSelection();
    }

    private void ResetMemberSelection()
    {
        selectedAvailable.Clear();
        selectedCurrent.Clear();
        membersDirty = false;
        playerSearch = "";
    }

    private async Task SaveEdit()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(editingTag.Name))
            {
                errorMessage = "Tag name is required.";
                return;
            }

            // Save Tag
            await TagRepository.SaveAsync(editingTag);
            
            // Re-assign ID to editingTag if it was new/generated
            if (isNewTag)
            {
                // In a real scenario, the repo might return the saved object with ID.
                // Assuming ID was generated client-side in constructor for now, which it is (Guid).
                isNewTag = false; 
            }

            editingTag = null;
            errorMessage = null;
            await LoadTags();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving tag: {ex.Message}";
        }
    }

    private async Task CancelEdit()
    {
        if (membersDirty)
        {
            bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", "You have unsaved member changes. Are you sure you want to cancel?");
            if (!confirmed) return;
        }

        // If explicitly reverting member changes in UI memory:
        // We'd need to re-load roster from server to be purely safe, 
        // but since we modify the objects in 'allPlayers' directly in the UI, we should probably reload correct state.
        if(membersDirty)
        {
             allPlayers = await RosterRepository.LoadAsync();
             foreach(var p in allPlayers) { if (p.TagIds == null) p.TagIds = new List<string>(); }
        }

        editingTag = null;
        errorMessage = null;
        await LoadTags(); // Revert any temp changes in list
    }

    private async Task DeleteTag(TagDefinition tag)
    {
        errorMessage = null; successMessage = null;
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{tag.Name}'?");
        if (confirmed)
        {
            try
            {
                await TagRepository.DeleteAsync(tag.Id);
                await LoadTags();
                successMessage = $"Tag '{tag.Name}' deleted.";
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
    }

    private string GetRowClass(TagDefinition tag)
    {
        if (editingTag?.Id == tag.Id) return "table-active";
        if (tag.IsArchived) return "table-danger";
        if (!tag.IsRostered) return "table-info"; 
        return "";
    }

    // Member Management Logic
    private void ToggleSelection(List<PlayerImportData> selectionList, PlayerImportData player)
    {
        if (selectionList.Contains(player))
            selectionList.Remove(player);
        else
            selectionList.Add(player);
    }

    private void AddSelectedMembers()
    {
        if (editingTag?.Id == null) return;
        foreach(var p in selectedAvailable)
        {
            if (!p.TagIds.Contains(editingTag.Id))
            {
                p.TagIds.Add(editingTag.Id);
                membersDirty = true;
            }
        }
        selectedAvailable.Clear();
    }

    private void RemoveSelectedMembers()
    {
         if (editingTag?.Id == null) return;
         foreach(var p in selectedCurrent)
        {
            if (p.TagIds.Contains(editingTag.Id))
            {
                p.TagIds.Remove(editingTag.Id);
                membersDirty = true;
            }
        }
        selectedCurrent.Clear();
    }

    private async Task SaveMembers()
    {
        try
        {
            // Ideally we only save modified players, but RosterRepository.SaveAsync takes the whole list typically or replaces the container content?
            // Checking existing implementation of RosterRepository (previous context implied SaveAsync(List<PlayerImportData>)).
            // Assuming it accepts the full list to overwrite.
            
            await RosterRepository.SaveAsync(allPlayers);
            membersDirty = false;
            successMessage = "Member changes saved successfully.";
        }
        catch(Exception ex)
        {
            errorMessage = $"Failed to save members: {ex.Message}";
        }
    }
}
