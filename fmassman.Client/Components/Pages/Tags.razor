@page "/tags"
@using fmassman.Shared
@inject ITagRepository TagRepository
@inject IJSRuntime JSRuntime

<PageTitle>Tag Management</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1>Tag Management</h1>
    <button class="btn btn-primary" @onclick="CreateTag" disabled="@(editingTag != null)">
        <i class="bi bi-plus-lg"></i> Create New Tag
    </button>
</div>

@if (tags == null)
{
    <div class="text-center">
        <div class="spinner-border text-primary" role="status">
            <span class="visually-hidden">Loading...</span>
        </div>
    </div>
}
else
{
    @if (!string.IsNullOrEmpty(errorMessage))
    {
        <div class="alert alert-danger alert-dismissible fade show" role="alert">
            @errorMessage
            <button type="button" class="btn-close" @onclick="() => errorMessage = null" aria-label="Close"></button>
        </div>
    }

    <div class="card shadow-sm">
        <div class="table-responsive">
            <table class="table table-hover align-middle mb-0">
                <thead class="table-dark">
                    <tr>
                        <th style="width: 30%">Name</th>
                        <th class="text-center" style="width: 15%">Rostered</th>
                        <th class="text-center" style="width: 15%">Default</th>
                        <th class="text-center" style="width: 15%">Archived</th>
                        <th class="text-end" style="width: 25%">Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var tag in tags)
                    {
                        <tr class="@GetRowClass(tag)">
                            <td>
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <input class="form-control" @bind="editingTag.Name" placeholder="Tag Name" />
                                }
                                else
                                {
                                    <span class="fw-medium">@tag.Name</span>
                                }
                            </td>
                            <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsRostered" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsRostered ? "bi-check-circle-fill text-success" : "bi-x-circle text-secondary") fs-5"></i>
                                }
                            </td>
                            <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsDefault" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsDefault ? "bi-check-circle-fill text-primary" : "bi-circle text-secondary") fs-5"></i>
                                }
                            </td>
                             <td class="text-center">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <div class="form-check form-switch d-flex justify-content-center">
                                        <input class="form-check-input" type="checkbox" @bind="editingTag.IsArchived" />
                                    </div>
                                }
                                else
                                {
                                    <i class="bi @(tag.IsArchived ? "bi-archive-fill text-warning" : "bi-archive text-secondary") fs-5"></i>
                                }
                            </td>
                            <td class="text-end">
                                @if (editingTag?.Id == tag.Id)
                                {
                                    <button class="btn btn-sm btn-success me-2" @onclick="SaveEdit">
                                        <i class="bi bi-check-lg"></i> Save
                                    </button>
                                    <button class="btn btn-sm btn-secondary" @onclick="CancelEdit">
                                        <i class="bi bi-x-lg"></i> Cancel
                                    </button>
                                }
                                else
                                {
                                    <button class="btn btn-sm btn-outline-primary me-2" @onclick="() => EditTag(tag)" disabled="@(editingTag != null)">
                                        <i class="bi bi-pencil"></i> Edit
                                    </button>
                                    <button class="btn btn-sm btn-outline-danger" @onclick="() => DeleteTag(tag)" disabled="@(editingTag != null)">
                                        <i class="bi bi-trash"></i>
                                    </button>
                                }
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
}

@code {
    private List<TagDefinition> tags;
    private TagDefinition editingTag;
    private string errorMessage;

    protected override async Task OnInitializedAsync()
    {
        await LoadTags();
    }

    private async Task LoadTags()
    {
        try 
        {
            tags = await TagRepository.GetAllAsync();
            tags = tags.OrderBy(t => t.Name).ToList();
        } 
        catch (Exception ex)
        {
            errorMessage = $"Failed to load tags: {ex.Message}";
        }
    }

    private void CreateTag()
    {
        errorMessage = null;
        editingTag = new TagDefinition { Name = "New Tag" };
        tags.Insert(0, editingTag);
    }

    private void EditTag(TagDefinition tag)
    {
        errorMessage = null;
        // Clone to allow cancel
        editingTag = new TagDefinition
        {
            Id = tag.Id,
            Name = tag.Name,
            IsRostered = tag.IsRostered,
            IsDefault = tag.IsDefault,
            IsArchived = tag.IsArchived
        };
    }

    private async Task SaveEdit()
    {
        try
        {
            if (string.IsNullOrWhiteSpace(editingTag.Name))
            {
                errorMessage = "Tag name is required.";
                return;
            }

            await TagRepository.SaveAsync(editingTag);
            editingTag = null;
            errorMessage = null;
            await LoadTags();
        }
        catch (Exception ex)
        {
            errorMessage = $"Error saving tag: {ex.Message}";
        }
    }

    private async Task CancelEdit()
    {
        editingTag = null;
        errorMessage = null;
        await LoadTags(); // Revert any temp changes in list
    }

    private async Task DeleteTag(TagDefinition tag)
    {
        errorMessage = null;
        bool confirmed = await JSRuntime.InvokeAsync<bool>("confirm", $"Are you sure you want to delete '{tag.Name}'?");
        if (confirmed)
        {
            try
            {
                await TagRepository.DeleteAsync(tag.Id);
                await LoadTags();
            }
            catch (Exception ex)
            {
                errorMessage = ex.Message;
            }
        }
    }

    private string GetRowClass(TagDefinition tag)
    {
        if (editingTag?.Id == tag.Id) return "table-active";
        // User requested: If IsArchived -> Red, If !IsRostered -> Blue
        if (tag.IsArchived) return "table-danger";
        if (!tag.IsRostered) return "table-info"; 
        return "";
    }
}
