@page "/role-editor"
@rendermode InteractiveServer
@using fmassman.Shared
@using fmassman.Shared.Services
@using fmassman.Web.Models
@inject RoleEditorViewModel vm
@inject NavigationManager Nav
@implements IDisposable

<PageTitle>Role Editor</PageTitle>

<div class="d-flex justify-content-between align-items-center mb-3">
    <h1>Role Editor</h1>
    <div>
        <button class="btn btn-warning me-2" @onclick="vm.ResetDefaults">
            <i class="bi bi-arrow-counterclockwise"></i> Reset to Baseline
        </button>
        <button class="btn btn-primary" @onclick="vm.SaveChanges">
            <i class="bi bi-save"></i> Save Changes
        </button>
    </div>
</div>

@if (vm.Roles == null)
{
    <p>Loading...</p>
}
else
{
    <div class="row">
        <div class="col-md-4">
            <div class="list-group" style="max-height: 70vh; overflow-y: auto;">
                @foreach (var role in vm.Roles.OrderBy(r => r.Category).ThenBy(r => r.Name))
                {
                    <button class="list-group-item list-group-item-action @(vm.SelectedRole == role ? "active" : "")" 
                            @onclick="() => vm.SelectRole(role)">
                        <strong>@role.Name</strong>
                        <div class="small">@role.Category</div>
                    </button>
                }
            </div>
        </div>

        <div class="col-md-8">
            @if (vm.SelectedRole != null)
            {
                <div class="card bg-dark text-white border-secondary">
                    <div class="card-header">
                        Editing: <strong>@vm.SelectedRole.Name</strong> (@vm.SelectedRole.Category)
                    </div>
                    <div class="card-body">
                        <table class="table table-dark table-sm">
                            <thead>
                                <tr>
                                    <th>Attribute</th>
                                    <th style="width: 100px;">Weight</th>
                                    <th style="width: 50px;"></th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var weight in vm.SelectedRole.Weights.OrderBy(w => w.Key))
                                {
                                    <tr>
                                        <td>@weight.Key</td>
                                        <td>
                                            <input type="number" class="form-control form-control-sm" 
                                                   value="@weight.Value" 
                                                   @onchange="@(e => vm.UpdateWeight(weight.Key, e.Value))" />
                                        </td>
                                        <td>
                                            <button class="btn btn-sm btn-danger" @onclick="() => vm.RemoveWeight(weight.Key)">
                                                <i class="bi bi-trash"></i>
                                            </button>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>

                        <div class="input-group mt-3">
                            <select class="form-select" @bind="vm.NewAttribute">
                                <option value="">-- Select Attribute --</option>
                                @foreach (var attr in RoleFitCalculator.ValidAttributeNames)
                                {
                                    if (!vm.SelectedRole.Weights.ContainsKey(attr))
                                    {
                                        <option value="@attr">@attr</option>
                                    }
                                }
                            </select>
                            <button class="btn btn-success" @onclick="vm.AddAttribute" disabled="@string.IsNullOrEmpty(vm.NewAttribute)">
                                Add
                            </button>
                        </div>
                    </div>
                </div>
            }
            else
            {
                <div class="alert alert-info">Select a role to edit its attribute weights.</div>
            }
        </div>
    </div>
}

<div class="toast-container position-fixed top-0 end-0 p-3 mt-4" style="z-index: 1050">
    <div class="toast align-items-center text-white bg-success border-0 @(vm.ShowToast ? "show" : "")" role="alert" aria-live="assertive" aria-atomic="true">
        <div class="d-flex">
            <div class="toast-body">
                <i class="bi bi-check-circle-fill me-2"></i> @vm.ToastMessage
            </div>
            <button type="button" class="btn-close btn-close-white me-2 m-auto" @onclick="vm.CloseToast" aria-label="Close"></button>
        </div>
    </div>
</div>

@code {
    protected override void OnInitialized()
    {
        vm.OnChange += StateHasChanged;
        vm.LoadData();
    }

    public void Dispose()
    {
        vm.OnChange -= StateHasChanged;
    }
}
